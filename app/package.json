{
  "name": "dicecloud",
  "version": "2.0.33",
  "description": "Unofficial Online Realtime D&D 5e App",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThaumRystra/DiceCloud"
  },
  "author": "Stefan Zermatten",
  "scripts": {
    "run": "meteor",
    "test": "meteor test --driver-package meteortesting:mocha --port 3001"
  },
  "engines": {
    "node": "14.0.x",
    "npm": "6.13.x"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@chenfengyuan/vue-countdown": "^1.1.5",
    "@tozd/vue-observer-utils": "^0.5.0",
    "animejs": "^2.2.0",
    "aws-sdk": "^2.1059.0",
    "bcrypt": "^5.0.0",
    "chroma-js": "^2.4.2",
    "core-js": "^2.6.11",
    "css-box-shadow": "^1.0.0-3",
    "date-fns": "^1.30.1",
    "ddp-rate-limiter-mixin": "^1.1.10",
    "discord.js": "^12.5.3",
    "dompurify": "^2.3.4",
    "ignore": "^5.2.0",
    "ignore-styles": "^5.0.1",
    "lodash": "^4.17.20",
    "marked": "^4.0.10",
    "meteor-node-stubs": "^1.1.0",
    "minify-css-string": "^1.0.0",
    "moo": "^0.5.1",
    "nearley": "^2.19.1",
    "ngraph.graph": "^19.1.0",
    "ngraph.path": "^1.4.0",
    "qrcode": "^1.5.0",
    "request": "^2.88.2",
    "simpl-schema": "^1.12.0",
    "source-map-support": "^0.5.21",
    "speakingurl": "^14.0.1",
    "styles": "^0.2.1",
    "underscore": "^1.13.2",
    "vue": "2.6.10",
    "vue-meteor-tracker": "^2.0.0-beta.5",
    "vue-reactive-provide": "^0.3.0",
    "vue-router": "^3.5.3",
    "vuedraggable": "^2.23.2",
    "vuetify": "^2.6.2",
    "vuetify-upload-button": "^2.0.2",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.20.0",
    "eslint-plugin-vuetify": "^1.1.0",
    "mem": "^6.1.1",
    "sass": "^1.48.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:vue/base"
    ],
    "plugins": [
      "vue",
      "vuetify"
    ],
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "parser": "vue-eslint-parser",
        "rules": {
          "vue/component-tags-order": [
            "error",
            {
              "order": [
                "template",
                "script",
                "style"
              ]
            }
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es2021": true,
      "es2020": true,
      "browser": true,
      "node": true,
      "meteor": true,
      "mocha": true
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "vuetify/no-deprecated-classes": "error"
    }
  }
}
